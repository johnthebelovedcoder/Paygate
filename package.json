{
  "name": "paygate",
  "version": "1.0.0",
  "description": "A payment gateway with frontend and backend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev:backend": "cd paygate-backend-python && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
    "dev:frontend": "cd paygate-ui && npm run start",
    "backend": "cd paygate-backend-python && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "frontend": "cd paygate-ui && npm run start",
    "build": "cd paygate-ui && npm run build",
    "install:all": "npm install && cd paygate-ui && npm install",
    "setup": "npm install && cd paygate-ui && npm install && cd ../paygate-backend-python && pip install -r requirements.txt",
    "setup:dev": "npm run setup && npm run setup:db",
    "setup:db": "cd paygate-backend-python && python create_tables.py",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd paygate-backend-python && python -m pytest tests/",
    "test:frontend": "cd paygate-ui && npm test",
    "docker:up": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "lint": "cd paygate-ui && npm run lint",
    "clean": "rm -rf node_modules && cd paygate-ui && rm -rf node_modules"
  },
  "keywords": ["payment", "gateway", "python", "react"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {}
}